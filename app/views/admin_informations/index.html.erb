<div class="container">
	<h1>お知らせ一覧</h1>
	<table class="table">
		<thead>
			<tr>
				<td>更新日</td>
				<td>お知らせ</td>
				<td></td>
			</tr>
		</thead>
		<tbody>
			<% @informations.each do |f| %>
			<tr>
				<td><%= f.created_at.strftime('%Y/%m/%d/%H:%M') %></td>
				<td>
				    <%= f.text %>
				</td>
				<td><%= link_to "削除", admin_information_path(f.id), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn btn-danger pull-right "%></td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<%= paginate @informations %>
</div>