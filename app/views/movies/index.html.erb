<div class="container">
	<div class="row">
		<div class="col-lg-10">
			<h1>新着動画</h1>
		</div>
		<div class="col-lg-2">
			<%= link_to "ランキングへ", ranking_path%>
		</div>
	</div>

    <div class="row">
		<table class="table">
			<thead>
				<tr>
					<th>タイトル</th>
					<th>紹介者コメント</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @movies.each do |f| %>
				<tr>
					<td><%= link_to f.title, movie_path(f) %></td>
					<td><%= f.introducer_comment %></td>
					<td>
						<%= link_to image_tag("http://img.youtube.com/vi/#{f.movie_url_id}/mqdefault.jpg"), movie_path(f) %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class="row">
		<div class="col-lg-5"></div>
		<div>
		    <%= paginate @movies %>
		</div>
	</div>
</div>
