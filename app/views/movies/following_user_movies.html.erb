<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<h1>フォローしている人の共有動画</h1>
<table>
	<thead>
		<tr>
			<th>タイトル</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @movies.reverse_each do |f| %>
		<tr>
			<td><%= link_to f.title, movie_path(f) %></td>
			<td>
				<%= link_to image_tag("https://img.youtube.com/vi/#{f.movie_url_id}/hqdefault.jpg"), movie_path(f) %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
