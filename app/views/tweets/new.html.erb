<div class="container">
	<%= form_for @tweet do |f| %>
		<div class="row">
			<div class="col-sm-3"></div>
			<div class="col-sm-6">
			    <%= f.label :tweet %>
				<%= f.text_area :text, rows:'5', class: "form-control",placeholder: "あなたのつぶやきをここに" %>
		    </div>
		</div>
		<div class="row">
			<div class="col-sm-3"></div>
			<div>
			    <%= f.submit "つぶやく", class: "btn btn-lg btn-base-1 mt-20 pull-left" %>
			</div>
		</div>
	<% end %>
</div>